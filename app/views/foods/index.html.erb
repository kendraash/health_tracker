<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
<h1>Food</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Calories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.calories %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Food', new_food_path %>
</div>


<div class="col-md-6">
  <h1>Exercise</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Calories burned</th>
        <th colspan="3"></th>
      </tr>
    </thead>


    <tbody>
      <% @exercises.each do |exercise| %>
        <tr>
          <td><%= exercise.name %></td>
          <td><%= exercise.calories_burned %></td>
          <td><%= link_to 'Show', exercise %></td>
          <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
          <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Exercise', new_exercise_path %>
  </div>
</div>
